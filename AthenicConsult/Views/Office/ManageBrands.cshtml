@using AthenicConsulting.Office.Views.ViewModels
@model ManageBrandsViewModel

@{
    ViewData["Title"] = "Manage Brand Page";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Brands</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2" style="padding:20px;">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Brand</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Industry</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Created Date</th>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brand in Model.Brands)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/athenictemplate/images/site-logo.svg" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@brand.Name</h6>
                                                <p class="text-xs text-secondary mb-0">@brand.Description </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@brand.Industry.Name</p>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        @if (brand.Deactivatated)
                                        {
                                            <span class="badge badge-sm bg-gradient-success">
                                                OFFLINE
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm  bg-gradient-secondary">
                                                ONLINE
                                            </span>
                                        }

                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@brand.CreatedDate.ToString("dd-MM-yyyy")</span>
                                    </td>
                                    <td class="align-middle">
                                        <a  asp-action="EditBrand" asp-controller="Office" asp-route-brandId="@brand.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                            Edit
                                        </a> |
                                        <a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
