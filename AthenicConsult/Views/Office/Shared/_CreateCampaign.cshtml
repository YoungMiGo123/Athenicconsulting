@model CreateCampaignViewModel

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-75" style="margin-top:35px;">
            <div class="col-lg-12 col-xl-12">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Create Campaign</p>
                                <form class="mx-1 mx-md-4" method="post" asp-action="CreateCampaign" asp-controller="Office" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="input-group input-group-outline my-3" style="padding:10px;">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="input-group input-group-outline my-3">
                                                <label class="form-label">Campaign Name</label>
                                                <input type="text" class="form-control" asp-for="Name" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="input-group input-group-outline my-3" style="padding:10px;">
                                                <i class="fa fa-hand-pointer fa-lg me-3 fa-fw"></i>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="input-group input-group-outline my-3">
                                                @Html.DropDownListFor(m => m.CampaignType,Model.CampaignTypes,"Select Campaign", new { @class = "form-control select-input placeholder-active active focused" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="input-group input-group-outline my-3" style="padding:10px;">
                                                <i class="fa fa-hand-pointer fa-lg me-3 fa-fw"></i>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="input-group input-group-outline my-3">
                                                @Html.DropDownListFor(m => m.BrandId,Model.Brands,"Select Brand", new { @class = "form-control select-input placeholder-active active focused" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="input-group input-group-outline my-3" style="padding:10px;">
                                                <i class="fa fa-upload fa-lg me-3 fa-fw"></i>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="input-group input-group-outline my-3">
                                                <input class="form-control form-control-lg" style="padding:12px;" asp-for="FormFiles" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register Brand</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="/athenicdashboard/img/animated/term.svg" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>