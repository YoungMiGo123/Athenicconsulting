@using AthenicConsulting.Core.Data.Entity
@model IEnumerable<Industry>

<div class="row">
    @foreach (var industry in Model)
    {
        <div class="col-lg-3 col-md-4 col-6">
            <div class="card text-center" style="border:none;">
                <div class="card-body">
                    <a asp-action="FilterByIndustry"
                   asp-controller="Home"
                   asp-route-industryId="@industry.Id"
                   style="width:150px;border-radius:20px;padding:10px;"
                   class="btn btn-primary">
                        @industry.Name
                    </a>
                </div>
            </div>

        </div>


    }
</div>