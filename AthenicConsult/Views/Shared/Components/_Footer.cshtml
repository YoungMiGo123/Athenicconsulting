@model LeadViewModel

<footer class="bg-dark text-center text-white" style="margin-top: 100px;background-color: #ed6524 !important;">
    <div class="container p-4">
        <section class="">
            <form asp-action="AddLead" asp-controller="Home" >
                <div class="row d-flex justify-content-center mb-4">
                    <div class="col-auto">
                        <h1 class="pt-2 text-uppercase" style="color:white;font-size: 23px;margin: 8px;">
                            <strong>Sign up for our newsletter</strong>
                        </h1>
                    </div>

                    <div class="col-md-5 col-12">
                        <div class="form-outline form-white mb-4">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" />
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-4">
                            Subscribe
                        </button>
                    </div>
                </div>
            </form>
        </section>
        <section class="">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">
                        <a class="nav-link active" style="color:white;" asp-action="Index" asp-controller="Home">Home</a>
                    </h5>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">
                        <a class="nav-link active" style="color:white;" asp-action="Industry" asp-controller="Home">Industries</a>
                    </h5>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">
                        <a class="nav-link active" style="color:white;" asp-action="Brands" asp-controller="Home">Brands</a>
                    </h5>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">
                        <a class="nav-link active" style="color:white;" href="#">SMS MASTERY COURSE</a>
                    </h5>
                </div>
            </div>
        </section>
    </div>
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © @DateTime.Now.Year Copyright: Athenic Consulting
    </div>
</footer>
